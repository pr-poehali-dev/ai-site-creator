{
  "tests": [
    {
      "name": "Test OPTIONS request for CORS",
      "method": "OPTIONS",
      "path": "/",
      "expectedStatus": 200,
      "expectedHeaders": {
        "Access-Control-Allow-Origin": "*"
      }
    },
    {
      "name": "Test POST with valid prompt",
      "method": "POST",
      "path": "/",
      "body": {
        "prompt": "Создай простую страницу с приветствием",
        "language": "html"
      },
      "expectedStatus": 200,
      "expectedBody": {
        "code": "string",
        "language": "string",
        "prompt": "string"
      },
      "bodyMatcher": "partial"
    },
    {
      "name": "Test POST without prompt",
      "method": "POST",
      "path": "/",
      "body": {},
      "expectedStatus": 400,
      "expectedBody": {
        "error": "string"
      },
      "bodyMatcher": "partial"
    }
  ]
}
